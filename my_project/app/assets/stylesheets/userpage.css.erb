//= depend_on_asset "main_background.jpg"
#logout-btn {
    font-family: 'Berkshire Swash', Helvetica, sans-serif;
}
#userpage-background {
    background-image: url('<%= asset_path("main_background.jpg") %>');
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
}
#travel-list {
    margin-top: 12%;
    padding: 5px;
    border: 4px solid white;
    border-radius: 1%;
    opacity: 0.8;
    background-color: #99CCCC;
    height: 400px;
    width: 100%;
    overflow: scroll;
    color: white;
    font-size: 1.5em;
    display: inline-block;
}
#travel-page-title {
  font-size: 3em;
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
  color: #2b2b2b;
  display: inline-block;
}
#interest-title {
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
  margin-bottom: 0;
  text-decoration: underline;
  text-align: center;
}
#travel-list li {
    display: block;
    padding: none;
    margin-top: 0;
    font-family: "Trebuchet MS", Helvetica, sans-serif;
}
#thead-locations {
  color: white;
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
  margin-left: 10px;
  margin-bottom: 0;
}
#thead-actions {
  color: white;
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
  margin-left: 10px;
  margin-bottom: 0;
}
#add-form {
  margin-left: 2%;
  display: inline-block;
}
#add-error {
  display: inline-block;
}
#near-loc-name {
  font-weight: bold;
  font-size: 1.5em;
  color: #FF6600;
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
}
#modal-div {
  background-color: #FFF0E0;
  opacity: 0.8;
}
