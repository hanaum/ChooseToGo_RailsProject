#interactive-btns-search {
  margin-top: 0;
  margin-left: 0;
  margin-bottom: 5%;
}
#map-div {
  margin-top: 4%;
}
td.tbody-td {
  width: 30%;
}
.places-link {
  color: #CC6633;
  background: transparent;
  border: none;
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
  border-radius: 3px;
}
.places-link:hover {
  color: #336699;
}
.userpage-btn {
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
}
.location-options-remove {
  background-color: gray;
  border: none;
  border-radius: 3px;
  font-size: .5em;
}

.location-options-visited {
  background-color: #CC6633;
  border: none;
  border-radius: 3px;
  font-size: .5em;

}
.location-list-buttons {
  margin-top: 5%;
  display: inline-block;
  margin-bottom: 5%;
}
p.modal-pts {
  font-weight: bold;
  font-size: 1.5em;
  color: #33CCCC;
  font-family: 'Berkshire Swash', Helvetica, sans-serif;
}
#googleMap {
        height: 450px;
        margin-left: 0%;
        padding: 0;
      }
      #map {
        margin-top: 0%;
        height: 90%;
        border: 3px solid white;
        border-radius: 3px;
      }
.controls {
  margin-top: 10px;
  border: 1px solid transparent;
  border-radius: 2px 0 0 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  height: 32px;
  outline: none;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
}

#pac-input {
  background-color: #fff;
  font-family: Roboto;
  font-size: 15px;
  font-weight: 300;
  margin-left: 12px;
  padding: 0 11px 0 13px;
  text-overflow: ellipsis;
  width: 300px;
}

#pac-input:focus {
  border-color: #4d90fe;
}

.pac-container {
  font-family: Roboto;
}

#type-selector {
  color: #fff;
  background-color: #4d90fe;
  padding: 5px 11px 0px 11px;
}

#type-selector label {
  font-family: Roboto;
  font-size: 13px;
  font-weight: 300;
}


