<div id="login-background">
  <div class="row">
    <div id="login-content">
      <h1>Sign In</h1>
      <% if flash[:error] %>
        <p class="error"><%=flash[:error]%></p>
      <%end%>
      <div id="social-login" class="col-md-3" >
        <a href="#"><img src="http://techulus.com/buttons/fb.png" /></a><br/>
        <a href="#"><img src="http://techulus.com/buttons/tw.png" /></a><br/>
        <a href="#"><img src="http://techulus.com/buttons/gplus.png" /></a>
      </div>
      <div class="col-md-7" style="border-left:1px solid #ccc;height:160px">
        <form action="/sessions/new" method="post" class="form-horizontal">
          <fieldset>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <input id="textinput" name="email" type="text" placeholder="Enter Email" class="form-control input-md"><br>
            <input id="textinput" name="password" type="password" placeholder="Enter Password" class="form-control input-md">
            <div class="spacing"><a href="#"><small> Forgot Password?</small></a><br/></div>
            <input type="submit" id="singlebutton" class="btn btn-info btn-sm pull-right" value="Sign In">
            <a href="/users/new">Not Registered yet? Click Here!</a>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
