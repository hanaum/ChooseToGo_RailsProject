//= depend_on_asset "main_background.jpg"
#history-background {
    background-image: url('<%= asset_path("main_background.jpg") %>');
    background-postition: center;
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
}

#history-list {
    display: block;
    width: 43%;
    height: 400px;
    background-color: white;
    border-radius: 3%;
    opacity: 0.4;
    overflow: scroll;
    color: black;
    font-size: 1.5em;
    margin: 0 auto;
}
#travel-history-btn {
    border-radius: 6px;
    font-family: 'Berkshire Swash', Helvetica, sans-serif;
}
#history-title {
    margin-top: 0;
    font-family: 'Berkshire Swash', Helvetica, sans-serif;
}
#listpage-div {
    margin: 5% 0 2% 0;
}
.homepage-link {
    margin-top: 50%;
    font-family: 'Berkshire Swash', Helvetica, sans-serif;
    font-size: 1.5em;
    color: white;
}
.homepage-link:hover {
  color: #FF6600;
  text-decoration: none;
}
.history-list {
    list-style-type: none;
}
.history-link {
  color: black;
  border: none;
  margin-top: 3%;
  background: transparent;
}
.history-link:hover {
  color: #FF9933;
}
